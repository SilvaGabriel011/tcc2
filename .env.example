# Database Configuration
# DB_PROVIDER can be "sqlite" (development) or "postgresql" (production)
DB_PROVIDER="sqlite"

# Database URLs
# For development with SQLite (recommended for local development):
DATABASE_URL="file:./dev.db"

# For production with PostgreSQL (uncomment and configure):
# DATABASE_URL="postgresql://user:password@localhost:5432/agroinsight"

# Direct database connection URL (for migrations - PostgreSQL only)
# This bypasses connection pooling
# DIRECT_URL="postgresql://user:password@localhost:5432/agroinsight?schema=public"

# ===== SUPABASE CONFIGURATION =====
# If using Supabase, you need BOTH URLs:
# 1. Pooled connection (for application queries) - ADD ?pgbouncer=true to avoid prepared statement errors
# 2. Direct connection (for migrations)
#
# Example:
# DATABASE_URL="postgresql://postgres.xxx:password@aws-1-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"
#
# IMPORTANT: The ?pgbouncer=true parameter is REQUIRED when using Supabase's pooler
# to prevent "prepared statement does not exist" errors (PostgreSQL error 26000)

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here"

# Devin AI API
DEVIN_API_KEY="your-devin-api-key-here"

# Upstash Redis (Cache)
# Crie uma conta gratuita em: https://upstash.com
# Após criar um banco Redis, copie a URL e o token REST
UPSTASH_REDIS_REST_URL="https://seu-banco.upstash.io"
UPSTASH_REDIS_REST_TOKEN="seu-token-aqui"

# Google Gemini (Opcional - para diagnósticos com IA)
GOOGLE_GEMINI_API_KEY="sua-chave-api-gemini"

# OpenAI (Opcional - alternativa ao Gemini)
OPENAI_API_KEY="sua-chave-api-openai"

# SerpAPI (Para Google Scholar nas Referências)
# Crie uma conta em: https://serpapi.com (100 buscas grátis/mês)
SERPAPI_API_KEY="sua-chave-serpapi"
