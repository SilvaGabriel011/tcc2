// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Para migrations na Vercel
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  name              String?
  password          String
  role              String    @default("USER") // USER or ADMIN
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  // Relations
  projects        Project[]
  auditLogs       AuditLog[]
  savedReferences SavedReference[]

  @@index([email])
  @@index([createdAt])
  @@map("users")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  owner               User                    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  uploadPresets       ProjectUploadPreset[]
  datasets            Dataset[]
  validationSettings  ValidationSetting[]
  projectSettings     ProjectSetting[]

  @@index([ownerId])
  @@index([createdAt])
  @@index([ownerId, createdAt])
  @@map("projects")
}

model ProjectUploadPreset {
  id                    String   @id @default(cuid())
  projectId             String
  intervals             String   // Store bovine intervals as JSON string
  defaultFieldMappings  String   // Store field mappings as JSON string
  reviewRequired        Boolean  @default(true)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([projectId, reviewRequired])  // NEW: Filter by review status
  @@map("project_upload_presets")
}

model Dataset {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  filename    String
  status      String   @default("UPLOADED") // UPLOADED, PROCESSING, VALIDATED, APPROVED, REJECTED
  data        String   // Store processed data as JSON string
  metadata    String?  // Store metadata about the dataset as JSON string
  
  // Novos campos temporais
  measurementDate  DateTime?  // Data da medição
  startDate        DateTime?  // Data inicial do período
  endDate          DateTime?  // Data final do período
  
  // Novos campos contextuais
  farmLocation     String?   // JSON: {state, municipality, lat, lon}
  environmentData  String?   // JSON: {temperature, humidity, thi, etc}
  productionSystem String?   // intensivo, semi-intensivo, extensivo
  
  // Metadados de qualidade
  dataQualityScore Float?
  hasTemporalData  Boolean   @default(false)
  hasEnvironmental Boolean   @default(false)
  
  // Archival fields
  archivedAt      DateTime?
  archivedToS3    Boolean   @default(false)
  s3Key           String?
  s3StorageClass  String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project       Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  validations   DataValidation[]
  mappings      DataMapping[]
  timeseriesData TimeSeriesData[]

  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([projectId, status])
  @@index([projectId, createdAt])
  @@index([measurementDate])
  @@index([projectId, status, createdAt])     // NEW: Combined filter + sort
  @@index([status, measurementDate])          // NEW: Time-series queries
  @@index([hasTemporalData, measurementDate]) // NEW: Temporal data filtering
  @@index([archivedAt])                       // NEW: Archival queries
  @@index([archivedToS3, createdAt])          // NEW: Archival status queries
  @@map("datasets")
}

model DataMapping {
  id          String   @id @default(cuid())
  datasetId   String
  sourceField String
  targetField String
  unitFrom    String?
  unitTo      String?
  createdAt   DateTime @default(now())

  // Relations
  dataset Dataset @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@index([sourceField])
  @@index([datasetId, sourceField])  // NEW: Fast field mapping lookup
  @@index([datasetId, targetField])  // NEW: Reverse mapping lookup
  @@map("data_mappings")
}

model DataValidation {
  id          String   @id @default(cuid())
  datasetId   String
  field       String
  rule        String   // REQUIRED, MIN_VALUE, MAX_VALUE, RANGE, PATTERN, CUSTOM
  value       String?
  status      String   @default("PENDING") // PENDING, PASSED, FAILED, REVIEWED
  message     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  dataset Dataset @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  @@index([datasetId])
  @@index([status])
  @@index([datasetId, status])
  @@map("data_validations")
}

model ValidationSetting {
  id        String   @id @default(cuid())
  projectId String
  field     String
  rule      String   // REQUIRED, MIN_VALUE, MAX_VALUE, RANGE, PATTERN, CUSTOM
  value     String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([enabled])
  @@index([projectId, enabled])  // NEW: Active validation rules
  @@index([projectId, field])    // NEW: Field-specific rules
  @@map("validation_settings")
}

model ProjectSetting {
  id        String   @id @default(cuid())
  projectId String
  key       String
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, key])
  @@map("project_settings")
}

model SavedReference {
  id              String   @id @default(cuid())
  userId          String
  
  // Metadados básicos
  title           String
  url             String?
  doi             String?  // Digital Object Identifier
  abstract        String?  // SQLite não precisa de @db.Text
  
  // Autores e publicação
  authors         String   // JSON array: [{name, affiliation}]
  year            Int?
  publishedDate   DateTime?
  language        String?  // pt, en, es
  
  // Journal/Revista
  journal         String?
  issn            String?  // International Standard Serial Number
  volume          String?
  issue           String?
  pages           String?  // Ex: "123-145"
  
  // Categorização
  keywords        String?  // JSON array de keywords
  tags            String   // User tags (comma-separated)
  
  // Source e URLs
  source          String   @default("manual") // scielo, crossref, pubmed, manual
  pdfUrl          String?
  
  // Métricas e sincronização
  citationsCount  Int?     @default(0)
  lastSyncedAt    DateTime?
  
  // Conteúdo legado (manter compatibilidade)
  content         String?  // SQLite não precisa de @db.Text
  
  // Archival fields
  archivedAt      DateTime?
  archivedToS3    Boolean   @default(false)
  s3Key           String?
  
  // Timestamps
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([doi])
  @@index([userId, createdAt])
  @@index([source])
  @@index([userId, url])     // NEW: Fast duplicate checking
  @@index([userId, source])  // NEW: Filter by source
  @@index([userId, year])    // NEW: Filter by publication year
  @@index([archivedAt])      // NEW: Archival queries
  @@map("saved_references")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // CREATE, UPDATE, DELETE, APPROVE, REJECT
  resource  String   // e.g., "project_upload_presets"
  resourceId String
  changes   String?  // Store the changes made as JSON string
  createdAt DateTime @default(now())
  
  // Archival fields
  archivedAt      DateTime?
  archivedToS3    Boolean   @default(false)
  s3Key           String?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([resource, resourceId])
  @@index([userId, resource, createdAt])  // NEW: Complex audit queries
  @@index([resource, action])             // NEW: Filter by resource + action
  @@index([archivedAt])                   // NEW: Archival queries
  @@index([archivedToS3, createdAt])      // NEW: Archival status queries
  @@map("audit_logs")
}

// ==================== MULTI-SPECIES MODELS ====================

model AnimalSpecies {
  id            String   @id @default(cuid())
  code          String   @unique // 'bovine','swine','poultry','sheep','goat','forage','aquaculture'
  name          String   // 'Bovinos','Suínos','Aves','Ovinos','Caprinos','Forragem','Piscicultura'
  hasSubtypes   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  subtypes      AnimalSubtype[]
  references    ReferenceData[]
  
  @@map("animal_species")
}

model AnimalSubtype {
  id          String   @id @default(cuid())
  speciesId   String
  code        String   // 'dairy','beef','broiler','layer','nursery','finishing'
  name        String   // 'Leite','Corte','Frango de Corte','Poedeiras','Creche','Terminação'
  description String?  // Descrição opcional do subtipo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  species     AnimalSpecies @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  references  ReferenceData[]
  
  @@index([speciesId])
  @@unique([speciesId, code]) // Código único por espécie
  @@map("animal_subtypes")
}

model ReferenceData {
  id            String   @id @default(cuid())
  speciesId     String
  subtypeId     String?
  metric        String   // 'gpd','peso_nascimento','producao_leite','conversao_alimentar'
  minValue      Float
  idealMinValue Float?
  idealMaxValue Float?
  maxValue      Float
  unit          String   // 'kg','%','g/dia','L/dia','kg/kg'
  source        String   // 'NRC 2016','EMBRAPA 2023','Literatura'
  description   String?  // Descrição ou observações sobre a métrica
  validFrom     DateTime @default(now())
  validUntil    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  species       AnimalSpecies  @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  subtype       AnimalSubtype? @relation(fields: [subtypeId], references: [id], onDelete: SetNull)
  
  @@index([speciesId, metric])
  @@index([subtypeId, metric])
  @@unique([speciesId, subtypeId, metric]) // Métrica única por espécie/subtipo
  @@map("reference_data")
}

model ForageReference {
  id          String   @id @default(cuid())
  forageType  String   // 'brachiaria_brizantha','brachiaria_decumbens','panicum_maximum'
  variety     String?  // 'marandu','xaraes','mombaca','tanzania'
  metric      String   // 'biomassa_seca','proteina_bruta','fdn','fda','digestibilidade'
  minValue    Float
  idealValue  Float
  maxValue    Float
  unit        String   // 'kg/ha','%','cm'
  season      String?  // 'aguas','seca','transicao'
  source      String   // 'EMBRAPA Gado de Corte 2023'
  description String?  // Descrição ou condições específicas
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([forageType, metric])
  @@index([season])
  @@unique([forageType, variety, metric, season]) // Combinação única
  @@map("forage_references")
}

model TimeSeriesData {
  id          String   @id @default(cuid())
  datasetId   String
  timestamp   DateTime
  metric      String   // Nome da métrica (gpd, peso, consumo, etc)
  value       Float
  unit        String?
  animalId    String?  // Identificador do animal (se aplicável)
  lotId       String?  // Identificador do lote
  metadata    String?  // JSON com dados contextuais adicionais
  createdAt   DateTime @default(now())
  
  // Relations
  dataset     Dataset  @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  
  @@index([datasetId])
  @@index([timestamp])
  @@index([metric])
  @@index([datasetId, timestamp])
  @@index([datasetId, metric])
  @@index([datasetId, metric, timestamp])  // NEW: Metric time-series
  @@index([animalId, timestamp])           // NEW: Animal tracking
  @@index([lotId, timestamp])              // NEW: Lot tracking
  @@map("timeseries_data")
}
